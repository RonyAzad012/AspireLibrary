@using AspireLibrary.Data
@model BorrowRecord

@{
    ViewData["Title"] = "Issue Book";
    var members = ViewBag.Members as List<ApplicationUser>;
    var books = ViewBag.Books as List<Book>;
}

<h2>Issue Book</h2>

<form asp-action="Issue" method="post">
    <div class="form-group">
        <label>Member</label>
        <select asp-for="UserId" class="form-control" required>
            <option value="">Select Member</option>
            @foreach (var member in members)
            {
                <option value="@member.Id">@member.FullName (@member.Email)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Book</label>
        <select asp-for="BookId" class="form-control" required>
            <option value="">Select Book</option>
            @foreach (var book in books)
            {
                <option value="@book.BookId">@book.Title (Available: @book.AvailableCopies)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-2">Issue</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
