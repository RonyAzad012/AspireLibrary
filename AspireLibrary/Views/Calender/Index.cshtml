@{
    ViewData["Title"] = "Calendar";
}

<link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/main.min.css' rel='stylesheet' />
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/main.min.js'></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div id='calendar'></div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: '/Calendar/GetEvents',
            eventDidMount: function(info) {
                if (info.event.extendedProps.isOverdue) {
                    info.el.style.backgroundColor = '#dc3545'; // Red for overdue
                    info.el.style.borderColor = '#b52b27';
                }
            },
            eventClick: function(info) {
                Swal.fire({
                    title: info.event.title,
                    text: `Due Date: ${info.event.startStr}`,
                    icon: info.event.extendedProps.isOverdue ? 'error' : 'info'
                });
            }
        });
        calendar.render();
    });
</script>
