@model FineSettings
@{
    ViewData["Title"] = "Create Fine Settings";
}

<h2>➕ Create Fine Settings</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="FinePerDay" class="form-label"></label>
        <input asp-for="FinePerDay" class="form-control" />
        <span asp-validation-for="FinePerDay" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaxFine" class="form-label"></label>
        <input asp-for="MaxFine" class="form-control" />
        <span asp-validation-for="MaxFine" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">💾 Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
